{
  "manifest_version": 3,
  "name": "My Chrome Extension",
  "version": "1.0",
  "description": "This is my first Chrome extension.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "downloads"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "./thirdparty/html2canvas.min.js",
        "content_script.js"
      ]
    }
  ]
}